# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_password_here

# HuggingFace Models (Local - Recommended)
HF_LLM_MODEL=microsoft/DialoGPT-medium
HF_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
HF_CACHE_DIR=./models  # Local cache for downloaded models

# Alternative: HuggingFace Inference API (Cloud)
# HUGGINGFACE_API_TOKEN=your_hf_token_here
# HF_LLM_MODEL=microsoft/DialoGPT-large
# HF_EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2

# Alternative: Groq (Free Tier)
# LLM_API_BASE=https://api.groq.com/openai/v1
# LLM_API_KEY=your_groq_api_key
# LLM_MODEL=llama-3.1-8b-instant

# Alternative: Together AI
# LLM_API_BASE=https://api.together.xyz/v1
# LLM_API_KEY=your_together_api_key
# LLM_MODEL=meta-llama/Llama-3-8b-chat-hf

# Performance Settings
TORCH_DEVICE=cpu  # or 'cuda' if you have GPU
MAX_LENGTH=512
TEMPERATURE=0.1
